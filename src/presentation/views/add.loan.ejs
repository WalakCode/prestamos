<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prestafacil</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <% if (error) { %>
        <h1 class="fa fa-lock fa-stack-1x"><%= error %>!</h1>
      <% } %>
<form class="login-form" action="/createLoan" method="post">
    <p class="login-text">
        <span class="fa-stack fa-lg">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-lock fa-stack-1x"></i>
        </span>

       
    </p>

    <select class="login-other" id="cedula" name="id">
        <option value=""class="login-other" disabled selected>Selecciona una cedula</option>
        <% for (const usuario of usuarios) { %>
          <option value="<%= usuario.id_usuarios %>"><%= usuario.cedula %></option>
        <% } %>
      </select>

    <input type="number" name="amount" class="login-other" placeholder="Monto">


    <select class="login-other" name="percentage">
        <option class="login-other" value="" disabled selected>Selecciona un porcentaje</option>
        <% for (var i = 1; i <= 100; i++) { %>
            <option value="<%= i %>"><%= i %>%</option>
        <% } %>
    </select>

    <select name="fee_frequency" class="login-other">
        <option value="" class="login-other" disabled selected>Selecciona una frecuencia</option>
        <% const frecuencias = ['diario', 'quincenal', 'mensual', 'anual']; %>
        <% for (const frecuencia of frecuencias) { %>
            <option value="<%= frecuencia %>"><%= frecuencia.charAt(0).toUpperCase() + frecuencia.slice(1) %></option>
        <% } %>
    </select>

    <input type="number" class="login-other" name="fee" placeholder="Cantidad de Cuotas" >
    <button type="submit" name="Login" value="Registrar" class="login-submit">Registralo</button>
</form>

<div class="underlay-photo"></div>
<div class="underlay-black"></div>

</body>
</html>